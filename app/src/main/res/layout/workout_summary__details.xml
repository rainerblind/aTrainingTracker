<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_details_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="12dp"
    android:paddingEnd="16dp"
    android:paddingBottom="4dp"
    tools:visibility="visible">

    <!-- First Row: Distance and Duration -->
    <LinearLayout
        android:id="@+id/workout_details_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Distance -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical">

            <!-- Distance -->
            <TextView
                android:id="@+id/detail_distance"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_distance"
                android:drawablePadding="4dp"
                tools:text="21.1 km" />

            <!-- Max Displacement (Luftlinie) -->
            <TextView
                android:id="@+id/detail_max_displacement"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?android:attr/textColorSecondary"
                android:visibility="gone"
                tools:text="(Max. from start: 1.5 km)"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Spacer to push duration to the right -->
        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Duration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <!-- Active Time (Primary Time Metric) -->
            <TextView
                android:id="@+id/detail_time_active"
                style="@style/TextAppearance.MaterialComponents.Headline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_time_active"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                tools:text="1:45:33" />

            <!-- Total Time (Secondary Annotation) -->
            <TextView
                android:id="@+id/detail_time_total"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="?android:attr/textColorSecondary"
                tools:text="(Total: 1:50:10)" />
        </LinearLayout>
    </LinearLayout>

    <!-- average speed / pace -->
    <!-- laps? -->
    <!-- goal, method, description? -->

    <!--  Row for Average Speed / Pace -->
    <LinearLayout
        android:id="@+id/workout_details_rowSpeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- Average Speed/Pace -->
        <TextView
            android:id="@+id/detail_avg_speed"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_speed"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|start"
            tools:text="12.0 km/h" />

        <!-- You could add other items here with layout_weight=1, like max speed -->

    </LinearLayout>

    <!-- Row: Altitude Details -->
    <LinearLayout
        android:id="@+id/workout_details_rowAltitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <!-- Ascent -->
        <TextView
            android:id="@+id/detail_ascent"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_ascent"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|start"
            tools:text="123 m" />

        <!-- Descent -->
        <TextView
            android:id="@+id/detail_descent"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_descent"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|start"
            tools:text="119 m" />

        <!-- Min Altitude -->
        <TextView
            android:id="@+id/detail_min_altitude"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_altitude_min"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|start"
            tools:text="250 m" />

        <!-- Max Altitude -->
        <TextView
            android:id="@+id/detail_max_altitude"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_altitude_max"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|start"
            tools:text="373 m" />
    </LinearLayout>

</LinearLayout>