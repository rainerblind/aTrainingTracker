<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Scrim is the header area for the workout details -->
        <View
            android:id="@+id/scrim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/colorPrimary"
            android:paddingBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/workout_details_include"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Workout Title -->
        <TextView
            android:id="@+id/tv_workout_summaries_name"
            style="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:textColor="?attr/colorOnPrimary"
            app:layout_constraintEnd_toStartOf="@id/ll_workout_summaries__sport_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Schmellbachtal" />

        <!-- Workout Summaries -->

        <LinearLayout
            android:id="@+id/date_time_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@id/scrim"
            app:layout_constraintEnd_toStartOf="@+id/ll_workout_summaries__sport_container"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_workout_summaries_name">

            <!-- Date TextView -->
            <TextView
                android:id="@+id/tv_workout_summaries__date"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_date_start_18dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="?attr/colorOnPrimary"
                app:drawableTint="?attr/colorOnPrimary"
                tools:text="Mon, 27. Nov 2023" />

            <!-- Time TextView -->
            <TextView
                android:id="@+id/tv_workout_summaries__time"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_time_start_18dp"
                android:drawablePadding="4dp"
                android:gravity="center_vertical"
                android:textColor="?attr/colorOnPrimary"
                app:drawableTint="?attr/colorOnPrimary"
                tools:text="10:30" />

        </LinearLayout>

        <!-- View to visualize the sport -->
        <LinearLayout
            android:id="@+id/ll_workout_summaries__sport_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/scrim"
            app:layout_constraintBottom_toBottomOf="@id/scrim">

            <!-- The ImageView and TextView inside this LinearLayout are fine -->
            <ImageView
                android:id="@+id/iv_workout_summaries__sport_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:tint="?attr/colorOnPrimary"
                android:src="@drawable/bsport_run_gray" />

            <TextView
                android:id="@+id/tv_workout_summaries__sport_name"
                style="@style/TextAppearance.MaterialComponents.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                tools:text="@string/sport_type_run" />

            <TextView
                android:id="@+id/tv_workout_summaries__equipment"
                style="@style/TextAppearance.MaterialComponents.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorOnPrimary"
                android:visibility="gone"
                tools:text="with Hoka Clifton 9"
                tools:visibility="visible" />
        </LinearLayout>

        <!-- Placeholder for Workout Details (Distance, Time, Ascent, etc.) -->
        <include
            android:id="@+id/workout_details_include"
            layout="@layout/workout_summary__details"
            android:layout_marginTop="-8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrim" />

        <!-- Container for Extrema Values -->
        <TableLayout
            android:id="@+id/extrema_values_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_details_include"
            tools:visibility="visible" />

        <include
            android:id="@+id/workout_description_include"
            layout="@layout/workout_summary__description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/extrema_values_container"
            tools:visibility="visible" />

        <!-- MapView is now positioned below the new extrema container -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/workout_summaries_mapView"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_description_include"
            map:liteMode="true"
            map:mapType="none" />

        <!-- TODO: remove? -->
        <!-- Separator Line -->
        <View
            android:id="@+id/separator_export_status"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/workout_summaries_mapView"
            tools:visibility="visible" />

        <!-- Export Status Section Below the Map -->
        <TextView
            android:id="@+id/export_status_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="@string/export_status__header_title"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separator_export_status"
            tools:visibility="visible" />

        <LinearLayout
            android:id="@+id/export_status_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/export_status_header"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>