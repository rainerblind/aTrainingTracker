<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rowView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground">

        <!-- Lite-mode MapView -->
        <com.google.android.gms.maps.MapView
            android:id="@+id/mapViewSegment"
            android:layout_width="120dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            map:liteMode="true"
            map:mapType="none"/>

        <!-- Climb Category Chip (Overlay) -->
        <TextView
            android:id="@+id/textViewCategoryChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/category_chip_background"
            android:paddingStart="8dp"
            android:paddingTop="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/mapViewSegment"
            app:layout_constraintTop_toTopOf="@id/mapViewSegment"
            tools:text="Cat 1" />

        <!-- Segment Name -->
        <TextView
            android:id="@+id/textViewSegmentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/layout_pr"
            app:layout_constraintStart_toEndOf="@id/mapViewSegment"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Epic Mountain Climb"/>

        <!-- START OF NEW CODE: PR Time Layout -->
        <LinearLayout
            android:id="@+id/layout_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/textViewSegmentName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/textViewSegmentName"
            tools:visibility="visible">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_pr_timer"
            app:tint="?android:attr/textColorSecondary"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/textViewPrTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textStyle="bold"
            android:textColor="?android:attr/textColorSecondary"
            tools:text="15:32" />
    </LinearLayout>

        <!-- City Name -->
        <TextView
            android:id="@+id/textViewCity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            app:layout_constraintEnd_toEndOf="@id/textViewSegmentName"
            app:layout_constraintStart_toStartOf="@id/textViewSegmentName"
            app:layout_constraintTop_toBottomOf="@id/textViewSegmentName"
            tools:text="Nice, France" />

        <!-- Row 1: Distance -->
        <LinearLayout
            android:id="@+id/layout_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewSegmentName"
            app:layout_constraintTop_toBottomOf="@id/textViewCity">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_distance"
                app:tint="?android:attr/textColorSecondary"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/textViewDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="13.8 km" />
        </LinearLayout>

        <!-- Row 2: Grades (Average and Max) -->
        <LinearLayout
            android:id="@+id/layout_grades"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewSegmentName"
            app:layout_constraintTop_toBottomOf="@id/layout_distance">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_grade"
                app:tint="?android:attr/textColorSecondary"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/textViewAvgGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="8.1% Avg" />

            <View
                android:layout_width="1dp"
                android:layout_height="12dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:id="@+id/textViewMaxGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                tools:text="14.2% Max" />
        </LinearLayout>

        <!-- Row 3: Elevations (Gain, Min, Max) -->
        <LinearLayout
            android:id="@+id/layout_elevation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/textViewSegmentName"
            app:layout_constraintTop_toBottomOf="@id/layout_grades"
            app:layout_constraintVertical_bias="0.0">

        <!-- Elevation Gain -->
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_elevation_gain"
                app:tint="?android:attr/textColorSecondary"
                tools:ignore="ContentDescription"/>

            <TextView
            android:id="@+id/textViewElevationGain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="1120 m" />

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider" />

        <!-- Min Elevation -->
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_elevation_min"
            app:tint="?android:attr/textColorSecondary"
            tools:ignore="ContentDescription"/>
        <TextView
            android:id="@+id/textViewElevationMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="450 m" />

        <!-- Divider -->
        <View
            android:layout_width="1dp"
            android:layout_height="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="?android:attr/listDivider" />

        <!-- Max Elevation -->
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@drawable/ic_elevation_max"
            app:tint="?android:attr/textColorSecondary"
            tools:ignore="ContentDescription"/>
        <TextView
            android:id="@+id/textViewElevationMax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            tools:text="1570 m" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>