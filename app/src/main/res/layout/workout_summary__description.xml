<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">

    <!-- separator -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        android:visibility="visible"/>

    <!-- header -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/workout_summary__description_header"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_workout_description"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_workout_description"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone"
        tools:text="Description: A short run through the forest to test the new shoes."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_workout_goal"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_workout_goal"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone"
        tools:text="Goal: Keep a steady pace below 6:00 min/km."
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tv_workout_method"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_workout_method"
        android:drawablePadding="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
        android:textColor="?android:attr/textColorSecondary"
        android:visibility="gone"
        tools:text="Method: Fartlek with 5 intervals."
        tools:visibility="visible" />

</LinearLayout>