<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timeLayout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:text="@string/time_lap" />

    <TextView
        android:id="@+id/textViewLapTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="0:01:00"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingTop="5dp"
        android:text="@string/distance_lap" />

    <TextView
        android:id="@+id/textViewLapDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1.001 km"
        android:textSize="30dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="left"
        android:paddingTop="5dp"
        android:text="@string/speed" />

    <TextView
        android:id="@+id/textViewLapSpeed"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="19.3 km/h"
        android:textSize="30dp" />


</LinearLayout>

