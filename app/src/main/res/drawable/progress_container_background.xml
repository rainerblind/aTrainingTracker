<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"><!-- Use a semi-transparent background color.
         You can adjust this color to match your app's theme.
         #E6 is a 90% opaque alpha value. -->
    <solid android:color="#E6FFFFFF" />

    <!-- Give the background rounded corners. -->
    <corners android:radius="8dp" />

    <!-- Optional: Add a subtle stroke around the container. -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

</shape>